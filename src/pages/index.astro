---
	import Layout from "../layouts/Layout.astro"
	import Terminal from "../components/Terminal.svelte"
	import Bento from "../components/Bento.astro"
---

<Layout title="Samuel Suarez">
	<Terminal client:load></Terminal>
	<main >
		<Bento />
	</main>
</Layout>

<style lang="scss">

	main {
		margin-block: 40px;
		display: flex;
		background-color: $black;
		position: relative;
	}

	@media (width < 900px) {
		main {
			margin-block: 20px;
			width: 95%;
		}
	}

</style>
