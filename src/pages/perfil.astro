---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Perfil">
    <main>
        <header class="perfil" transition:name="perfil">
            <h1>Perfil Profesional</h1>
        </header>

    </main>
</Layout>


<style lang="scss">
    @import url("../styles/global.sass");

    main {
        padding-block: 40px;
        display: flex;
        justify-content: center;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .perfil {
        width: 80%;
        border-radius: 20px;
        font-family: Now;
        background-color: $dark-blue;
        height: 200px;
        place-content: center;
        color: $white;
        cursor: pointer;
    }
</style>
