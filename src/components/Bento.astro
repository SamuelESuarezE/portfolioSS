        <a class="icon" target="_blank" href="https://www.instagram.com/samuel_suarez02e/">
            <i class="bi bi-instagram"></i>
        </a>
    </div>

</section>


<style lang="scss">
    .card {
        border-radius: 20px;
        font-family: Now;
        background-color: $dark-blue;
        display: grid;
        place-content: center;
        color: $white;
        cursor: pointer;
        transition: 0.2s ease-in-out;


        &:hover {
            transform: scale(1.03);
            border: 1px solid $white;
            box-shadow: 0px 0px 15px #ffffff9d;


        }

        // Terminal
        &:nth-child(3) {
            grid-area: 1 / 6;
        }
    }

    .container {
        width: 100%;
        height: calc(100% - 80px);
        display: grid;
        margin: 40px;
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(4, 1fr);
        gap: 20px;

    }

    .gif {
        background-image: url("/coding_gif.webp");
        background-position: center;
        background-size: cover;
        cursor: auto;
    }

    .cv {
        border-radius: 20px;
        font-family: Now;
        background-color: $dark-blue;
        cursor: pointer;
        grid-area: 3;
        background-color: rgb(18, 65, 221);
        font-size: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: rgb(160, 182, 255);
        transition: 0.2s ease-in-out;
        text-decoration: none;
        grid-area: 3 / 1 / 4 / 1;

        p {
            font-size: 50px
        };

        &:hover {
            transform: scale(1.03);
            border: 1px solid $white;
            box-shadow: 0px 0px 15px #ffffff9d;
        }
    }   

    .english {
        background-color: rgba(60, 40, 173, 0.699);
        display: flex;
        flex-direction: column;
        gap: 10px;
        cursor: auto;


        h1 {
            text-align: center;
            &:first-child {
                color: rgb(132, 113, 236);
            }

            &:last-child {
                font-family: Fira Code;
                font-size: 50px;
            }
        }
    }

    .perfil {
        grid-area: 1 / 1 / 3 / 3;
    }

    .mision_vision {
        grid-area: 1 / 3 / 1 / 6;
    }

    .center {
        grid-area: 2 / 3 / 2 / 5; 
        background-color: rgba(31, 31, 31, 0.699);
        display: flex;
        align-items: center;
        gap: 30px;
        cursor: auto;

        .logo {
            height: 120px;
            aspect-ratio: 1/1;
            filter: drop-shadow(0px 2px 8px $black);
        }

        span {
            h1 {
                font-size: 35px;
            }

            p {
                font-family: Fira Code;
                font-weight: 500;

            }
        }
    }

    .servicios {
        grid-area: 2 / 5 / 2 / 7;
        background-color: rgba(12, 110, 155, 0.678);
        display: flex;
        flex-direction: column;
        justify-content: left;
        padding: 30px;
        gap: 15px;
        text-decoration: none;

        h1 {
            color: rgb(27, 163, 226);
        }

        .servicios_buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            width: 100%;

            button {
                cursor: pointer;
                font-family: Fira Code;
                background-color: rgb(27, 163, 226);
                border-radius: 10px;
                padding-inline: 10px;
                border: none;
                height: 20px;
                width: auto;
            }

        }

    }

    .objetivos {
        grid-area: 3 / 4 / 5 / 5;
    }

    .proyectos {
        grid-area: 3 / 2 / 5 / 4;
    }

    .certificaciones {
        grid-area: 4 / 1 / 5 / 1;
    }

    .contactame {
        grid-area: 4 / 5 / 4 / 7;
        display: flex;
        align-items: center;
        gap: 50px;
        cursor: auto;

        .icon {
            color: white;
            background: none;
            width: auto;
            font-size: 60px;
            max-height: 55px;
            transition: 0.2s ease-in-out;
            filter: drop-shadow(0px 0px 2px rgba(0, 0, 0, 0.678));
            
            &:hover {
                filter: drop-shadow(0px 0px 5px rgba(255, 255, 255, 0.5));
            }   
        }
    }





    
</style>